<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/material_margin"
    android:layout_marginTop="@dimen/material_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_icon"
        style="@style/AppTheme.material_1st"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/text_name"
        style="@style/AppTheme.material_2nd_text"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/text_category"
        style="@style/AppTheme.material_2nd_text_sub"
        android:layout_below="@id/text_name"/>

</RelativeLayout>
