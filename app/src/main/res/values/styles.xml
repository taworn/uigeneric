<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.material_1st">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_1st</item>
    </style>

    <style name="AppTheme.material_1st_image" parent="AppTheme.material_1st">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/material_image_as_label_tint</item>
    </style>

    <style name="AppTheme.material_2nd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_2nd</item>
        <item name="android:layout_marginRight">@dimen/material_margin_end</item>
    </style>

    <style name="AppTheme.material_2nd_text" parent="AppTheme.material_2nd">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/material_text</item>
    </style>

    <style name="AppTheme.material_2nd_text_sub" parent="AppTheme.material_2nd">
        <item name="android:textSize">@dimen/material_text_sub</item>
    </style>

    <style name="AppTheme.material_2nd_edit" parent="AppTheme.material_2nd">
        <item name="android:textSize">@dimen/material_edit</item>
    </style>

</resources>
