<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Animation</item>
    </style>

    <style name="AppTheme.Animation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.material_1st">
        <item name="android:layout_marginLeft">@dimen/material_margin_1st</item>
    </style>

    <style name="AppTheme.material_1st_image" parent="AppTheme.material_1st">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.material_1st_image_text" parent="AppTheme.material_1st_image">
        <item name="android:tint">@color/image_as_label_tint</item>
    </style>

    <style name="AppTheme.material_1st_image_edit" parent="AppTheme.material_1st_image">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:tint">@color/image_as_label_tint</item>
    </style>

    <style name="AppTheme.material_2nd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_2nd</item>
        <item name="android:layout_marginRight">@dimen/material_margin_end</item>
    </style>

    <style name="AppTheme.material_2nd_text" parent="AppTheme.material_2nd">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/material_text</item>
    </style>

    <style name="AppTheme.material_2nd_text_0" parent="AppTheme.material_2nd">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/material_text</item>
    </style>

    <style name="AppTheme.material_2nd_text_1" parent="AppTheme.material_2nd">
        <item name="android:textColor">@color/text_2nd_sub</item>
        <item name="android:textSize">@dimen/material_text_sub</item>
    </style>

    <style name="AppTheme.material_2nd_edit" parent="AppTheme.material_2nd">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">@dimen/material_edit</item>
    </style>

    <style name="AppTheme.material_2nd_spin" parent="AppTheme.material_2nd">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/material_text</item>
    </style>

</resources>
